[flake8]
# Default flake8 configuration for code analysis examples

# Maximum line length (88 to match black)
max-line-length = 88

# Extend ignore for black compatibility
# E203: Whitespace before ':' (conflicts with black's slice formatting)
# E501: Line too long (black handles line length)
# W503: Line break before binary operator (black's preferred style)
extend-ignore = E203, W503

# List of error codes to ignore per file
# F841: local variable assigned but never used (useful in examples)
per-file-ignores =
    example_clean.py: F841
    test_calculator_basic.py: F401

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    *.pyc,
    .venv,
    venv,
    env

# Show source code for errors
show-source = True

# Show the pep8 error code
show-pep8 = True

# Count the number of occurrences of each error/warning code
count = True

# Print total number of errors
statistics = True
